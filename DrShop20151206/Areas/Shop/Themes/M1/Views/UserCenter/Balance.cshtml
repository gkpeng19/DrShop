 @{
    Layout = "/Areas/Shop/Themes/M1/Views/Shared/_UserCenterLayout.cshtml";
 }  
 <script src="/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
<ul class="crumb w980">
        <li class="crumb-hp"><a title="首页" href="/">首页</a></li>
        <li><a href="@(ViewBag.BasePath)UserCenter?s=s">我的商城</a> </li>
    </ul>
    <input type="hidden" id="currentpage" value="span_6" />
    <div class="col-main">
        <!-- 用户信息 E -->
        <div class="user_dingdantitle">账户余额</div>
        <div class="user_titlebottom"> 可用余额：<span> ￥@(ViewBag.Balance.ToString("F"))</span> <div id="balanceDraw" style="display:none;">&nbsp;&nbsp;提现金额：<span><label id="labbalanceDraw">@ViewBag.BalanceDraw.ToString("F")</label></span> </div> &nbsp;&nbsp;账户状态：<span>@ViewBag.Activity</span> 
            <div  class="fr">
                <a href="@(ViewBag.BasePath)UserCenter/Recharge" class="usercenterbtn">&nbsp;&nbsp;&nbsp;&nbsp;</a>
                <a href="@(ViewBag.BasePath)UserCenter/Draw" class="withdraw" style="display:none;">申请提现</a>
            </div>
        </div> 
        <div id="divdetaillist">
             @Html.Action("BalanceDetList", "UserCenter") 
       @*     @Html.Action("Rechargelist", "UserCenter") *@
        </div>
    </div>
<script type="text/javascript">
    $(function () {
        
        //如果提现金额大于0就显示 提现金额
        if (parseFloat($('#labbalanceDraw').text()) > 0) {
            $('#balanceDraw').css('display', 'inline-block');
        }
        
        //单击列表 切换
        $('.user_rechargedetial a:not(".curr")').die('click').live('click', function () {
            var itemval = $(this).attr('item');
            if (itemval) {
                $('#divdetaillist').load($Maticsoft.BasePath + "UserCenter/" + itemval);
            }
        });
    }); 
</script>
