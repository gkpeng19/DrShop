@{
    Layout = "~/Areas/MShop/Themes/M1/Views/Shared/_BaseLayout.cshtml";
}
 <link href="/Areas/MShop/Themes/M1/Content/css/shopc2.css" rel="stylesheet" type="text/css" />
<div class="top">
    <span>订单成功</span>
    @Html.Partial("/Areas/MShop/Themes/M1/Views/Partial/_HeadRight.cshtml")
</div>
<div class="yy">
</div>
<div class="w main">
    <div class="m m3" id="qpay">
        <div class="mc">
            <s class="icon-succ02"></s>
            <div class="fore">
                <h3 class="ftx-02">
                    订单提交成功，请您尽快付款！</h3>
                <ul class="list-h" style="padding-left: 0px">
                    <li class="fore1" style="border-right:none;">订单号：@ViewBag.OrderCode</li>
                    <br/>
                    <li class="fore2">应付金额：<strong class="ftx-01">@(ViewBag.OrderAmount.ToString("F"))元</strong></li>
                </ul>
                <p id="p_show_info">
                    &nbsp;</p>
                <p class="reminder" style="margin-bottom: 30px">
                    <strong>支付<span class="ftx-01">@(ViewBag.OrderAmount.ToString("F"))元</span><br/>即可完成订单。</strong>   
                </p>
                <input type="button" border="none" name="" class="btn-impay" value="立即支付"/>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('.btn-impay').unbind('click').bind('click', function () {
        window.location.replace("/pay/certification@(ViewBag.OrderId)/@(ViewBag.CurrentArea)");
        return;
    });
</script>
