@{
    Layout = "~/Areas/MSNS/Themes/VSNS/Views/Shared/_SiteLayout.cshtml";
}
@model Maticsoft.ViewModel.SNS.LogOnModel 
<link href="/Areas/MSNS/Themes/VSNS/Content/Css/ptlogin-sa.css" rel="stylesheet"
    type="text/css" />
<link href="/Areas/MSNS/Themes/VSNS/Content/Css/ptlogin.css" rel="stylesheet" type="text/css" />
<script src="/Areas/MSNS/Themes/VSNS/Content/Scripts/UserCenter/DefaultLogin.js"
        type="text/javascript"></script>
        @if (ViewData.ModelState != null &&
         ViewData.ModelState.Count > 0 &&
         ViewData.ModelState["Message"] != null &&
         ViewData.ModelState["Message"].Errors.Count > 0)
{
    <script type="text/javascript">
        $(function () {
            ShowFailTip('@ViewData.ModelState["Message"].Errors[0].ErrorMessage');
        })
    </script>
}    
<style type="text/css">
    *:focus
    {
        outline: none;
    }
    input, button
    {
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    }
    html, body, form, fieldset, p, div, h1, h2, h3, h4, h5, h6, input
    {
        -webkit-text-size-adjust: none;
    }
    .qk_login
    {
        margin: 0 auto;
        width: 270px;
    }
    .to-quicklogin
    {
        margin-top: 20px;
    }
    .to-quicklogin a
    {
        color: #1a6db9;
        text-decoration: none;
        text-align: right;
        float: right;
    }
    .to-quicklogin:after
    {
        content: ".";
        display: block;
        height: 0;
        clear: both;
        visibility: hidden;
    }
    .verify_box
    {
        position: fixed;
        top: 50%;
        left: 50%;
        text-align: center;
        z-index: 9996;
        margin-top: -150px !important;
    }
</style>
<div>
    <h1 class="login_logo" id="title">
        logo</h1>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "formlogin" }))
    {
      <input id="hfRegisterToggle" type="hidden" value="@ViewBag.RegisterToggle" /> 
      <input name="returnUrl" type="hidden"  value="@ViewBag.returnUrl"/>
        <form id="log_from" onsubmit=" return false; " style="">
        <input type="hidden" name="pmd5" id="pmd5" value="">
        <fieldset id="loginBox" class="qqpwd_set">
            <p>
                <label class="qq_label">
                    帐 号：</label>
                @Html.TextBoxFor(m => m.Email, new { Class = "logininput text_input", id = "txtLogin", placeholder = "请输入用户名" })
                @*                      <input type="text" name="qq" id="qq" placeholder="请输入用户名" value="">*@
                <a class="pt_inp_empty" style="display: none;">清除 </a>
            </p>
            <p>
                <label class="pwd_label">
                    密 码：</label>
                @Html.PasswordFor(m => m.Password, new { Class = "logininput text_input", id = "password", placeholder = "请输入密码" })
                @*                      <input type="password" name="pwd" id="pwd" placeholder="请输入密码">*@
                <a class="pt_inp_empty" style="display: none;">清除 </a>
            </p>
        </fieldset>
        <div class="log_bar">
            <input id="loginsubmit" type="button" value="登录" class="lb_lg_btn">
        </div>
        <div class="log_bar">
             <input id="goregister" type="button" value="注册" class="lb_lg_btn">
        </div>
        </form>
    }
</div>
<div>
    <div class="footer">
        <p class="copyRight">
动软卓越 版权所有</p>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#goregister").click(function () {
            window.location = "@(ViewBag.BasePath)Account/Register";
        });
    });
</script>